<config>
    <modules>
        <Matomo_Analytics>
            <version>1.1.1</version>
        </Matomo_Analytics>
    </modules>

    <global>
        <models>
            <matomoanalytics>
                <class>Matomo_Analytics_Model</class>
            </matomoanalytics>
        </models>
        <blocks>
            <matomoanalytics>
                <class>Matomo_Analytics_Block</class>
            </matomoanalytics>
        </blocks>
        <helpers>
            <matomoanalytics>
                <class>Matomo_Analytics_Helper</class>
            </matomoanalytics>
        </helpers>
    </global>

    <frontend>
        <translate>
            <modules>
                <Matomo_Analytics>
                    <files>
                        <default>Matomo_Analytics.csv</default>
                    </files>
                </Matomo_Analytics>
            </modules>
        </translate>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <matomoanalytics_order_success>
                        <class>matomoanalytics/observer</class>
                        <method>setMatomoAnalyticsOnOrderSuccessPageView</method>
                    </matomoanalytics_order_success>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <matomoanalytics_order_success>
                        <class>matomoanalytics/observer</class>
                        <method>setMatomoAnalyticsOnOrderSuccessPageView</method>
                    </matomoanalytics_order_success>
                </observers>
            </checkout_multishipping_controller_success_action>
        </events>
        <layout>
            <updates>
                <matomoanalytics>
                    <file>matomoanalytics.xml</file>
                </matomoanalytics>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Matomo_Analytics>
                    <files>
                        <default>Matomo_Analytics.csv</default>
                    </files>
                </Matomo_Analytics>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Matomo_Analytics after="Mage_Adminhtml">Matomo_Analytics_Adminhtml</Matomo_Analytics>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
